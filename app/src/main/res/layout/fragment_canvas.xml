<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.draw.CanvasFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.miraxh.dreamer.ui.draw.CanvasHelper
            android:id="@+id/canvas"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/palette"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/palette_color1"
            android:layout_width="@dimen/color_palette_element_size"
            android:layout_height="@dimen/color_palette_element_size"
            android:layout_marginVertical="@dimen/general_margin"
            android:layout_marginLeft="@dimen/general_margin"
            android:layout_marginRight="@dimen/general_small_margin"
            android:background="@drawable/bg_color"
            android:backgroundTint="@color/colorWhite"
            android:drawableTint="@color/color2"
            app:layout_constraintEnd_toStartOf="@+id/palette_color2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/palette" />

        <ImageView
            android:id="@+id/color_checked1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:elevation="@dimen/elevation_one"
            android:focusable="false"
            android:src="@drawable/ic_check"
            android:tint="@color/colorPrimary"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@id/palette_color1"
            app:layout_constraintLeft_toLeftOf="@id/palette_color1"
            app:layout_constraintRight_toRightOf="@id/palette_color1"
            app:layout_constraintTop_toTopOf="@id/palette_color1" />

        <Button
            android:id="@+id/palette_color2"
            android:layout_width="@dimen/color_palette_element_size"
            android:layout_height="@dimen/color_palette_element_size"
            android:layout_marginHorizontal="@dimen/general_small_margin"
            android:layout_marginVertical="@dimen/general_margin"
            android:background="@drawable/bg_color"
            android:backgroundTint="@color/color2"
            app:layout_constraintEnd_toStartOf="@+id/palette_color3"
            app:layout_constraintStart_toEndOf="@+id/palette_color1"
            app:layout_constraintTop_toTopOf="@id/palette" />

        <ImageView
            android:id="@+id/color_checked2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:elevation="@dimen/elevation_one"
            android:focusable="false"
            android:src="@drawable/ic_check"
            android:tint="@color/colorPrimary"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/palette_color2"
            app:layout_constraintLeft_toLeftOf="@id/palette_color2"
            app:layout_constraintRight_toRightOf="@id/palette_color2"
            app:layout_constraintTop_toTopOf="@id/palette_color2" />

        <Button
            android:id="@+id/palette_color3"
            android:layout_width="@dimen/color_palette_element_size"
            android:layout_height="@dimen/color_palette_element_size"
            android:layout_marginHorizontal="@dimen/general_small_margin"
            android:layout_marginVertical="@dimen/general_margin"
            android:background="@drawable/bg_color"
            android:backgroundTint="@color/color3"
            app:layout_constraintEnd_toStartOf="@+id/palette_color4"
            app:layout_constraintStart_toEndOf="@+id/palette_color2"
            app:layout_constraintTop_toTopOf="@id/palette" />

        <ImageView
            android:id="@+id/color_checked3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:elevation="@dimen/elevation_one"
            android:focusable="false"
            android:src="@drawable/ic_check"
            android:tint="@color/colorPrimary"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/palette_color3"
            app:layout_constraintLeft_toLeftOf="@id/palette_color3"
            app:layout_constraintRight_toRightOf="@id/palette_color3"
            app:layout_constraintTop_toTopOf="@id/palette_color3" />

        <Button
            android:id="@+id/palette_color4"
            android:layout_width="@dimen/color_palette_element_size"
            android:layout_height="@dimen/color_palette_element_size"
            android:layout_marginHorizontal="@dimen/general_small_margin"
            android:layout_marginVertical="@dimen/general_margin"
            android:background="@drawable/bg_color"
            android:backgroundTint="@color/color4"
            app:layout_constraintEnd_toStartOf="@+id/palette_color5"
            app:layout_constraintStart_toEndOf="@+id/palette_color3"
            app:layout_constraintTop_toTopOf="@id/palette" />

        <ImageView
            android:id="@+id/color_checked4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:elevation="@dimen/elevation_one"
            android:focusable="false"
            android:src="@drawable/ic_check"
            android:tint="@color/colorPrimary"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/palette_color4"
            app:layout_constraintLeft_toLeftOf="@id/palette_color4"
            app:layout_constraintRight_toRightOf="@id/palette_color4"
            app:layout_constraintTop_toTopOf="@id/palette_color4" />

        <Button
            android:id="@+id/palette_color5"
            android:layout_width="@dimen/color_palette_element_size"
            android:layout_height="@dimen/color_palette_element_size"
            android:layout_marginHorizontal="@dimen/general_small_margin"
            android:layout_marginVertical="@dimen/general_margin"
            android:background="@drawable/bg_color"
            android:backgroundTint="@color/color5"
            app:layout_constraintEnd_toStartOf="@+id/palette_color6"
            app:layout_constraintStart_toEndOf="@+id/palette_color4"
            app:layout_constraintTop_toTopOf="@id/palette" />

        <ImageView
            android:id="@+id/color_checked5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:elevation="@dimen/elevation_one"
            android:focusable="false"
            android:src="@drawable/ic_check"
            android:tint="@color/colorPrimary"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/palette_color5"
            app:layout_constraintLeft_toLeftOf="@id/palette_color5"
            app:layout_constraintRight_toRightOf="@id/palette_color5"
            app:layout_constraintTop_toTopOf="@id/palette_color5" />

        <Button
            android:id="@+id/palette_color6"
            android:layout_width="@dimen/color_palette_element_size"
            android:layout_height="@dimen/color_palette_element_size"
            android:layout_marginHorizontal="@dimen/general_small_margin"
            android:layout_marginVertical="@dimen/general_margin"
            android:background="@drawable/bg_color"
            android:backgroundTint="@color/color6"
            app:layout_constraintEnd_toStartOf="@+id/palette_color7"
            app:layout_constraintStart_toEndOf="@+id/palette_color5"
            app:layout_constraintTop_toTopOf="@id/palette" />

        <ImageView
            android:id="@+id/color_checked6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:elevation="@dimen/elevation_one"
            android:focusable="false"
            android:src="@drawable/ic_check"
            android:tint="@color/colorPrimary"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/palette_color6"
            app:layout_constraintLeft_toLeftOf="@id/palette_color6"
            app:layout_constraintRight_toRightOf="@id/palette_color6"
            app:layout_constraintTop_toTopOf="@id/palette_color6" />

        <Button
            android:id="@+id/palette_color7"
            android:layout_width="@dimen/color_palette_element_size"
            android:layout_height="@dimen/color_palette_element_size"
            android:layout_marginVertical="@dimen/general_margin"
            android:layout_marginLeft="@dimen/general_small_margin"
            android:layout_marginRight="@dimen/general_margin"
            android:background="@drawable/bg_color"
            android:backgroundTint="@color/color7"
            app:layout_constraintEnd_toEndOf="@+id/palette"
            app:layout_constraintStart_toEndOf="@+id/palette_color6"
            app:layout_constraintTop_toTopOf="@id/palette" />

        <ImageView
            android:id="@+id/color_checked7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:elevation="@dimen/elevation_one"
            android:focusable="false"
            android:src="@drawable/ic_check"
            android:tint="@color/colorPrimary"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/palette_color7"
            app:layout_constraintLeft_toLeftOf="@id/palette_color7"
            app:layout_constraintRight_toRightOf="@id/palette_color7"
            app:layout_constraintTop_toTopOf="@id/palette_color7" />

        <TextView
            android:id="@+id/thickness_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/general_margin"
            android:layout_marginTop="@dimen/general_margin"
            android:elevation="@dimen/elevation_one"
            android:text="@string/thin_label_seekar"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintBottom_toTopOf="@id/seekBar_thickness"
            app:layout_constraintLeft_toLeftOf="@id/seekBar_thickness"
            app:layout_constraintTop_toBottomOf="@id/palette_color1" />

        <TextView
            android:id="@+id/thickness_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/general_small_margin"
            android:layout_marginTop="@dimen/general_margin"
            android:layout_marginRight="@dimen/general_margin"
            android:elevation="@dimen/elevation_one"
            android:text="@string/thick_label_seekbar"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/seekBar_thickness"
            app:layout_constraintRight_toRightOf="@id/seekBar_thickness"
            app:layout_constraintTop_toBottomOf="@id/palette_color1" />


        <SeekBar
            android:id="@+id/seekBar_thickness"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/general_small_margin"
            android:elevation="@dimen/elevation_one"
            android:max="10"
            android:paddingVertical="@dimen/general_small_margin"
            android:progress="3"
            app:layout_constraintLeft_toLeftOf="@id/palette"
            app:layout_constraintRight_toRightOf="@id/palette"
            app:layout_constraintTop_toBottomOf="@id/thickness_small" />

        <TextView
            android:id="@+id/palette"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dream_tile_size"
            android:background="@drawable/bg_palette"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/save_canvas_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/general_margin"
            android:layout_marginVertical="@dimen/general_small_margin"
            android:drawableLeft="@drawable/ic_save_thin"
            android:drawablePadding="@dimen/general_small_margin"
            android:drawableTint="@color/colorPrimaryDark"
            android:gravity="center"
            android:paddingHorizontal="@dimen/general_small_margin"
            android:paddingVertical="@dimen/general_small_margin"
            android:text="@string/save_label_palette"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="@id/palette"
            app:layout_constraintTop_toBottomOf="@id/seekBar_thickness"/>

        <TextView
            android:id="@+id/erase_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/general_margin"
            android:layout_marginVertical="@dimen/general_small_margin"
            android:drawableLeft="@drawable/ic_eraser"
            android:drawablePadding="@dimen/general_small_margin"
            android:drawableTint="@color/colorPrimaryDark"
            android:gravity="center"
            android:paddingHorizontal="@dimen/general_small_margin"
            android:paddingVertical="@dimen/general_small_margin"
            android:text="@string/erase_label"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            app:layout_constraintLeft_toRightOf="@id/save_canvas_btn"
            app:layout_constraintTop_toBottomOf="@id/seekBar_thickness"
            app:layout_constraintRight_toLeftOf="@id/reset_btn"/>

        <TextView
            android:id="@+id/reset_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/general_margin"
            android:layout_marginVertical="@dimen/general_small_margin"
            android:drawableLeft="@drawable/ic_reset"
            android:drawablePadding="@dimen/general_small_margin"
            android:drawableTint="@color/colorPrimaryDark"
            android:gravity="center"
            android:paddingHorizontal="@dimen/general_small_margin"
            android:paddingVertical="@dimen/general_small_margin"
            android:text="@string/reset_label_palette"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/seekBar_thickness"
            app:layout_constraintRight_toRightOf="@id/palette"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>