<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.Profile">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_norm_toolbar"
            android:background="@drawable/bg_toolbar"
            android:elevation="@dimen/elevation_one"
            android:gravity="top"
            android:paddingStart="@dimen/padding"
            android:paddingEnd="@dimen/padding"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:titleTextAppearance="@style/ToolbarTheme" />


        <LinearLayout
            android:id="@+id/title_group"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:elevation="@dimen/elevation_two"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/general_margin"
                android:shape="ring"
                android:layout_gravity="center"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@string/profile_description"
                    android:scaleType="fitCenter" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingVertical="@dimen/general_margin"
                android:text="@string/app_name"
                android:textSize="@dimen/title"
                android:theme="@style/pacifico" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <FrameLayout
                android:id="@+id/personal_info_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/general_margin"
                android:layout_marginTop="@dimen/general_margin"
                android:background="@drawable/bg_dreamtile">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/general_margin"
                        android:layout_marginTop="@dimen/general_margin"
                        android:text="@string/InfoLabel"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/surname_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/general_margin"
                        android:layout_marginTop="@dimen/general_margin"
                        android:text="@string/InfoLabel"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/email_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/general_margin"
                        android:layout_marginTop="@dimen/general_margin"
                        android:text="@string/InfoLabel"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/password_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/general_margin"
                        android:text="@string/InfoLabel"
                        android:textSize="20sp" />

                    <FrameLayout
                        android:id="@+id/layout_edit_info"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:layout_marginHorizontal="@dimen/general_margin"
                        android:layout_marginBottom="@dimen/general_margin"
                        android:background="@drawable/bg_dreamtile"
                        android:backgroundTint="@color/colorPrimaryDark"
                        app:layout_constraintBottom_toTopOf="@id/layout_facebook_signin"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <TextView
                            android:id="@+id/edit_info"
                            style="@style/signin_button"
                            android:text="@string/edit_info_btn"
                            android:textStyle="normal"
                            android:textSize="20sp"
                            app:drawableEndCompat="@drawable/ic_edit" />
                    </FrameLayout>

                </LinearLayout>


            </FrameLayout>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/drawer_icon"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:elevation="@dimen/elevation_two"
            android:paddingHorizontal="@dimen/general_margin"
            android:src="@drawable/ic_menu"
            app:layout_constraintBottom_toBottomOf="@+id/title_group"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/title_group" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>