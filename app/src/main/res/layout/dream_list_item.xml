<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/backgroud_tile"
        android:layout_width="0dp"
        android:layout_height="@dimen/dream_tile_size"
        android:layout_marginLeft="@dimen/general_margin"
        android:layout_marginRight="@dimen/general_margin"
        android:layout_marginTop="@dimen/general_margin"
        android:background="@drawable/bg_dreamtile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/date_label"
        android:theme="@style/dream_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/general_margin"
        android:layout_marginTop="@dimen/general_margin"
        android:layout_marginRight="@dimen/general_small_margin"
        android:text="@string/deafult_dream_date"
        android:translationZ="90dp"
        app:layout_constraintLeft_toLeftOf="@+id/backgroud_tile"
        app:layout_constraintTop_toTopOf="@+id/backgroud_tile" />

    <TextView
        android:id="@+id/title_label"
        android:theme="@style/dream_title"
        android:maxLength="28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/general_margin"
        android:layout_marginTop="@dimen/general_margin"
        android:layout_marginRight="@dimen/general_margin"
        android:text="@string/default_dream_titile"
        android:translationZ="90dp"
        app:layout_constraintBottom_toTopOf="@+id/description_label"
        app:layout_constraintLeft_toLeftOf="@+id/backgroud_tile"
        app:layout_constraintTop_toBottomOf="@+id/date_label" />

    <TextView
        android:id="@+id/description_label"
        android:theme="@style/dream_description"
        android:maxLength="150"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/general_margin"
        android:text="@string/lorem_ipsum"
        android:translationZ="90dp"
        app:layout_constraintBottom_toBottomOf="@id/backgroud_tile"
        app:layout_constraintLeft_toLeftOf="@+id/backgroud_tile"
        app:layout_constraintRight_toRightOf="@+id/backgroud_tile"
        app:layout_constraintTop_toBottomOf="@+id/title_label" />


</androidx.constraintlayout.widget.ConstraintLayout>